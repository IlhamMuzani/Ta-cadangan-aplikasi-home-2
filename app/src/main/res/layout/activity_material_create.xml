<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.material.create.MaterialCreateActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <EditText
            android:id="@+id/edtNameTokoMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Masukkan Nama Toko"/>

        <EditText
            android:id="@+id/edtJenismaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Jenis Material"/>

        <EditText
            android:id="@+id/edtAlamatMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Alamat Lengkap"/>

        <EditText
            android:id="@+id/edtphoneMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="No Telpone"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/edthargamaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Masukkan Harga Material"
            android:inputType="number"/>

        <Button
            android:id="@+id/BtnLocationM"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="100dp"
            android:background="@drawable/button_corner_color"
            android:drawableStart="@drawable/ic_baseline_location_black"
            android:paddingStart="10dp"
            android:paddingEnd="20dp"
            android:text="Location"
            android:textColor="@color/white"
            app:backgroundTint="#03A9F4" />

        <EditText
            android:id="@+id/edtlocationmaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Atur Lokasi"/>

        <ImageView
            android:id="@+id/imvImageMaterial"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_add_image"/>

        <EditText
            android:id="@+id/edtdeskripsimaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Masukkan Deskripsi"/>

        <Button
            android:id="@+id/BTN_savematerial"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="Simpan"
            android:background="@drawable/button_corner_color"/>

        <ProgressBar
            android:id="@+id/progressmaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>