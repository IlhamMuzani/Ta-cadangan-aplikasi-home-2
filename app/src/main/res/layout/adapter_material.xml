<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <TextView
            android:id="@+id/txvOptionsM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="5dp"
            android:text="&#8942;"
            android:textColor="@color/black"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"/>

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imvImageM"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/product"
            app:riv_corner_radius="10dp"
            />



        <TextView
            android:id="@+id/txvNamaTokoM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imvImageM"
            android:layout_toStartOf="@+id/txvOptionsM"
            android:text="Nama Toko"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txvLocationM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/imvImageM"
            android:layout_below="@+id/txvNamaTokoM"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:text="Lokasi"
            android:textSize="12dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>