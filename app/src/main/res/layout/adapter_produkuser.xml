<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/crv_produkuser"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_btn_lapisanbiru"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imvImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/product"
            app:riv_corner_radius="10dp"
            />

        <TextView
            android:id="@+id/txvNameTokouser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imvImage"
            android:text="Nama Toko"
            android:textSize="18dp"
            android:layout_marginHorizontal="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txvLokasiuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/imvImage"
            android:layout_below="@+id/txvNameTokouser"
            android:layout_marginHorizontal="10dp"
            android:text="Lokasi"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/txvJenispembuatanuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/imvImage"
            android:layout_below="@+id/txvNameTokouser"
            android:layout_marginHorizontal="10dp"
            android:text="Jenis Pembuatan"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/txvHargauser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/imvImage"
            android:layout_below="@+id/txvNameTokouser"
            android:layout_marginHorizontal="10dp"
            android:text="Rp.0"
            android:textSize="18dp"
            />

        <TextView
            android:id="@+id/txvDetailuser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:layout_toEndOf="@+id/imvImage"
            android:layout_below="@+id/txvNameTokouser"
            android:layout_marginHorizontal="10dp"
            android:text="Lihat Detail"
            android:textSize="18dp"
            android:textColor="@color/black"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>