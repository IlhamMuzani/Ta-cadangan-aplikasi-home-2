<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/biru"
    tools:context=".ui.produkuser_materialuser.tabs.material.materialdetail.MaterialDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/imvGambartokoM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/img_no_image"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Nama Toko"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txvNameM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="Nama Toko"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="Jenis Pembuatan"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txvJenisM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="Jenis pembuatan"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="Alamat"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txvAlamatM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="Alamat"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="No Telpone"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txvPhoneM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="5dp"
                android:text="No Telpone"
                android:textColor="@color/black"
                android:textSize="18sp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="Harga"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txvHargaM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="Harga"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="10dp"
                android:text="Deskripsi"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txvDeskripsiM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="Deskripsi"
                android:textColor="@color/black"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="LOKASI"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/txvAddressM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableStart="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                tools:text="Lokasi"
                android:textColor="@color/black"
                />

            <fragment
                android:id="@+id/mapM"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="5dp"
                />

                    <ProgressBar
                        android:id="@+id/progressdetailM"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>